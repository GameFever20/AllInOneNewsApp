<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.news.allinone.craftystudio.allinonenewsapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".NewsListActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>
        </activity>
        <activity
            android:name=".NewsFeedActivity"
            android:label="@string/title_activity_news_feed"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".NewsSourceFeedActivity"
            android:label="@string/title_activity_news_source_feed"
            android:launchMode="singleInstance"

            android:theme="@style/AppTheme.NoActionBar">

        </activity>
    </application>

</manifest>